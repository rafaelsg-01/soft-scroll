<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
    <UseWindowsForms>true</UseWindowsForms>

    <!-- Branding -->
    <AssemblyName>SoftScroll</AssemblyName>
    <RootNamespace>SmoothScrollClone</RootNamespace>
    <Product>Soft Scroll</Product>
    <Company>Soft Scroll</Company>
    <Description>Soft Scroll brings smooth, configurable scrolling to Windows.</Description>
    <Version>0.1.0</Version>

    <!-- App executable icon -->
    <ApplicationIcon>Assets\app.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="Assets\app.ico">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Assets\logo.svg">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <!-- Kill any running instance before build to avoid file lock -->
  <Target Name="KillRunningInstance" BeforeTargets="BeforeBuild">
    <Exec Command="taskkill /F /IM $(AssemblyName).exe /T" IgnoreExitCode="true" />
  </Target>

</Project>
