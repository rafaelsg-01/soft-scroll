<Window x:Class="SmoothScrollClone.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Soft Scroll - Configuracoes" Height="540" Width="760"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <SolidColorBrush x:Key="AccentBrush" Color="#1089FF"/>
        <SolidColorBrush x:Key="PanelBrush" Color="#0F1929"/>
        <SolidColorBrush x:Key="PanelBorderBrush" Color="#1F2B40"/>
        <SolidColorBrush x:Key="TextBrush" Color="#E6F1FF"/>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        </Style>
        <!-- Simple prettier TextBox style -->
        <Style TargetType="TextBox">
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="Background" Value="#0B1422"/>
            <Setter Property="BorderBrush" Value="#22314A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="MinWidth" Value="160"/>
            <Style.Triggers>
                <Trigger Property="IsKeyboardFocused" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Margin" Value="8,0,0,0"/>
            <Setter Property="MinWidth" Value="100"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="Margin" Value="6"/>
        </Style>
    </Window.Resources>

    <Grid Background="#0A1220">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="#0D1A2E" Padding="16">
            <DockPanel>
                <TextBlock Text="Soft Scroll (All Applications)" FontSize="18" FontWeight="SemiBold"/>
                <Button Content="Reset All" HorizontalAlignment="Right" Click="OnResetDefaults"/>
            </DockPanel>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1">
            <Grid Margin="24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Left column: numeric settings -->
                <Border Grid.Column="0" Padding="16" Background="{StaticResource PanelBrush}" CornerRadius="8" BorderBrush="{StaticResource PanelBorderBrush}" BorderThickness="1">
                    <UniformGrid Columns="2" Rows="5" Margin="4">
                        <TextBlock Text="Step size [px]" VerticalAlignment="Center"/>
                        <TextBox Text="{Binding StepSizePx, UpdateSourceTrigger=PropertyChanged}" 
                                 PreviewTextInput="NumericOnly" DataObject.Pasting="OnPasteNumeric"/>

                        <TextBlock Text="Animation time [ms]" VerticalAlignment="Center"/>
                        <TextBox Text="{Binding AnimationTimeMs, UpdateSourceTrigger=PropertyChanged}"
                                 PreviewTextInput="NumericOnly" DataObject.Pasting="OnPasteNumeric"/>

                        <TextBlock Text="Acceleration delta [ms]" VerticalAlignment="Center"/>
                        <TextBox Text="{Binding AccelerationDeltaMs, UpdateSourceTrigger=PropertyChanged}"
                                 PreviewTextInput="NumericOnly" DataObject.Pasting="OnPasteNumeric"/>

                        <TextBlock Text="Acceleration max [x]" VerticalAlignment="Center"/>
                        <TextBox Text="{Binding AccelerationMax, UpdateSourceTrigger=PropertyChanged}"
                                 PreviewTextInput="NumericOnly" DataObject.Pasting="OnPasteNumeric"/>

                        <TextBlock Text="Tail to head ratio [x]" VerticalAlignment="Center"/>
                        <TextBox Text="{Binding TailToHeadRatio, UpdateSourceTrigger=PropertyChanged}"
                                 PreviewTextInput="NumericOnly" DataObject.Pasting="OnPasteNumeric"/>
                    </UniformGrid>
                </Border>

                <!-- Right column: toggles -->
                <Border Grid.Column="1" Padding="16" Background="{StaticResource PanelBrush}" CornerRadius="8" BorderBrush="{StaticResource PanelBorderBrush}" BorderThickness="1" Margin="16,0,0,0">
                    <StackPanel>
                        <CheckBox Content="Enable for all apps by default" IsChecked="{Binding Enabled}"/>
                        <CheckBox Content="Animation easing" IsChecked="{Binding AnimationEasing}"/>
                        <CheckBox Content="Shift key horizontal scrolling" IsChecked="{Binding ShiftKeyHorizontal}"/>
                        <CheckBox Content="Horizontal smoothness" IsChecked="{Binding HorizontalSmoothness}"/>
                        <CheckBox Content="Reverse wheel direction" IsChecked="{Binding ReverseWheelDirection}"/>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>

        <!-- Footer -->
        <DockPanel Grid.Row="2" Margin="16">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Salvar" IsDefault="True" Click="OnSave"/>
                <Button Content="Fechar" Click="OnCloseClicked"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
